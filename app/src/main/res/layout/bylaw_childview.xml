<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:divider="@drawable/nav_drawer_background"
    android:dividerHeight="3dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="-20dp"
    android:showDividers="end">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/penalty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@color/windowBackground"
            android:fontFamily="roboto-bold"
            android:padding="10dp"
            android:text="@string/penalty_label"
            android:textColor="#FFFFFF"

            />
        <TextView
            android:id="@+id/penalty_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@color/windowBackground"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimary"
        android:gravity="center">
        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:src="@drawable/ic_insert_comment_black_48dp"/>

        <ImageView
            android:id="@+id/court_case_icon"
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:src="@drawable/court_judge_48"
            />
        <ImageView
            android:id="@+id/star_icon"
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:src="@drawable/ic_star_black_48dp"/>
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:src="@drawable/ic_share_black_48dp"/>

    </LinearLayout>
</LinearLayout>