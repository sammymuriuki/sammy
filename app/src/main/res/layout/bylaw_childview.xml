<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="-20dp"
    android:background="@color/windowBackground"
    android:showDividers="end"
    android:divider="@drawable/nav_drawer_background"
    android:dividerHeight="3dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/penalty_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:textColor="#FFFFFF"
        android:gravity="fill_horizontal"
        android:background="@color/windowBackground"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimary"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:id="@+id/comment_icon"
            android:src="@drawable/ic_insert_comment_black_48dp"/>

        <ImageView
            android:id="@+id/court_case_icon"
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:src="@drawable/court_judge_48"
            />
        <ImageView
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:id="@+id/star_icon"
            android:padding="20dp"
            android:src="@drawable/ic_star_black_48dp"/>
        <ImageView
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:id="@+id/share_icon"
            android:padding="20dp"
            android:src="@drawable/ic_share_black_48dp"/>

    </LinearLayout>
</LinearLayout>